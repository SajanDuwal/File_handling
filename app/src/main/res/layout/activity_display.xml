<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnReadExternalStoragePublic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_ReadExternalStoragePublic"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnReadExternalStoragePrivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_ReadExternalStoragePrivate"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnReadInternalStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_ReadInternalStorage"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tvData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="25sp" />

</LinearLayout>